.quote
    position relative
    min-height 175px
    margin 0
    padding 37px 66px
    color #676F95
    @media tablet
        padding 20px 30px
    &::after
        content ""
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background-color rgba(#DFE2EF, 0.5)
        z-index 3
        transition opacity .9s
    &__text
        margin 0
        font-size 14px
        line-height 24px
        letter-spacing 0.03em
    &__author
        display flex
        justify-content center
        align-items center
        position absolute
        left 50%
        bottom -31px
        transform translateX(-50%)
        width 62px
        height 62px
        border-radius 50%
        overflow hidden
        z-index 2
        &::after
            content ""
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            border-radius 50%
            background-color rgba(#DFE2EF, 0.8)
            z-index 4
            transition opacity .9s
        & img
            object-fit contain
.quotes__slide.swiper-slide-active>.quote::after
    opacity 0
.quotes__slide.swiper-slide-active>.quote>.quote__author::after
    opacity 0


