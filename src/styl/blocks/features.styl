.features
    display flex
    position relative
    padding 208px 271px 216px
    border-bottom 1px solid #d8e3fe
    background-color bg-color
    @media desc
        padding 130px 150px
    @media tablet
        padding 60px
    @media mobile
        padding 30px
    &__desc
        display flex
        flex-direction column
        width 100%
        max-width 420px
        @media tablet
            max-width 320px
        @media mobile
            margin 0 auto
            align-items center
    &__title
        margin 27px 0 21px
        & strong
            font-weight 500
    &__text
        margin 0
    &__buttons
        display flex
        width 100%
        max-width 260px
        margin-top 58px
        @media mobile
            margin-top 30px
    &__btn
        display flex
        justify-content center
        align-items center
        width 50%
        border-top-left-radius 2px
        border-bottom-left-radius 2px
        background-color light-purple-color
        color #fff
        box-shadow 0px 5px 15px rgba(188, 199, 255, 0.75)
        &:hover
           background-color cloud-color
           color blue-color
           .features__btn-icon>path
               fill blue-color
               transition fill .3s
        &:active
            opacity 0.5
    &__btn-icon
        margin-top 3px
        margin-left 6px
        transition all .3s
    &__link
        position relative
        width 50%
        border 1px solid #d1d1e4
        border-top-right-radius 2px
        border-bottom-right-radius 2px
        font-weight 500
        color #adb4d2
        z-index 1
        &::before
            content ""
            position: absolute
            top 15%
            left 10%
            height 0%
            width 2px
            background-color cloud-color
            transition all .3s ease
        &::after
            content ""
            position absolute
            top 15%
            left 10%
            height 70%
            width 0px
            background-color cloud-color
            z-index -1
        &:hover
            font-weight 700
            color #7382a3
            &::before
                height 70%
                transition all 0.3s ease
            &::after
                width 80%
                transition all 0.3s ease
                transition-delay 0.35s
        &:active
            opacity 0.5
    &__bg
        position absolute
        right 0
        top 150px
        @media desc
            width 50%;
        @media tablet
            top 100px
            width 60%;
        @media mobile
            display none