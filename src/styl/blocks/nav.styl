.nav
    @media mobile
        position absolute
        top 118px
        left 0
        width 100%
        opacity 0
        visibility hidden
        &.open
            opacity 1
            visibility visible
        &.open
            .nav__item
                opacity 1
                visibility visible
                transform translateY(0)
    &__list
        display flex
        margin 0 -21px
        font-weight 500
        font-size 12px
        line-height 15px
        @media tablet
            margin 0 -14px
        @media mobile
            flex-wrap wrap
            margin 0
            background #fff
    &__item
        margin: 0 21px
        @media tablet
            margin 0 14px
        @media mobile
            width 100%
            margin 0
            border-bottom 1px solid #d8e3fe
            opacity 0
            visibility hidden
            transform translateY(-20px)
            transition all .3s
            for $n in (1..5)
                &:nth-child({$n})
                    transition-delay (($n - 1) / 10) s
    &__link
        display block
        position: relative;
        text-align center
        color dark-grey-color
        &:hover
            font-weight 700
            color light-purple-color
        &.active
            font-weight 700
            color light-purple-color
        &::before
            display: block;
            content: attr(title)
            font-weight bold
            height 0
            overflow hidden
            visibility hidden
        @media mobile
            text-align left
            padding 12px 20px
            text-transform uppercase
.nav-toggle
    background: none transparent;
    border: 4px solid light-purple-color;
    border-left: 0 solid transparent;
    border-right: 0 solid transparent;
    cursor: pointer;
    display: block;
    height: 28px;
    position: relative;
    width: 28px;
    transition: all .3s;
    outline none
    &::before
        background: light-purple-color;
        content: '';
        height: 4px;
        position: absolute;
        left: 0;
        top: 8px;
        width: 28px;
        transition: all .2s;
    &::after
        background: light-purple-color;
        content: '';
        height: 4px;
        left: 0;
        position: absolute;
        top: 6px;
        opacity: 0;
        visibility: hidden;
        width: 100%;
        transform: rotate(90deg);
        transition: all .2s;
    @media more-mobile
        display none
    &.open
        border: 4px solid light-purple-color
        border-radius: 50%;
        transform: rotate(-135deg);
        &::before
            background: light-purple-color
            top: 8px;
            left: 4px;
            width: 12px;
        &::after
            background: light-purple-color
            opacity: 1;
            top: 8px;
            left: 4px;
            visibility: visible;
            width: 12px;